<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".login_and_registration.RegistrationActivity">

    <RelativeLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <ImageButton
        android:id="@+id/image_arrow"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/arrow"
        android:background="@null"
        android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/text_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="تسجيل دخول"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/edtext_national_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_edittext"
                android:hint="الرقم القومي"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtext_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="الاسم الاول"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtext_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="الاسم الاخير"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/txtreg_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="رقم الموبايل"
                android:inputType="number" />

            <EditText
                android:id="@+id/edtext_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="البريد الاكترونى"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edtextreg_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="كلمة المرور"
                android:inputType="textWebPassword" />

            <EditText
                android:id="@+id/edtext_retry_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint=" اعادة كتابة كلمة المرور"
                android:inputType="textWebPassword" />

            <Button
                android:id="@+id/btn_reg_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="تسجيل دخول" />

            <TextView
                android:id="@+id/txt_haveaccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="لدى حساب بالفعل,تسجيل دخول "
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>







