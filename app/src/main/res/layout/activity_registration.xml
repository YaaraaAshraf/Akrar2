    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">

            <EditText
                android:id="@+id/edtext_firstname"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_edittext"
                android:hint="الاسم الاول"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/edtext_lastname"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/edtext_firstname"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edittext"
                android:hint="الاسم الاخير"
                android:inputType="textPersonName"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />
            <EditText
                android:id="@+id/edtext_national_id"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/edtext_firstname"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edittext"
                android:hint="الرقم القومي"
                android:inputType="textPersonName"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/txtreg_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/edtext_firstname"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edittext"
                android:hint="رقم الموبايل"
                android:inputType="number"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/edtext_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/edtext_firstname"
                android:layout_marginBottom="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/rounded_edittext"
                android:hint="البريد الاكترونى"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <EditText
                android:id="@+id/edtextreg_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/edtext_firstname"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_edittext"
                android:hint="كلمة المرور"
                android:inputType="textWebPassword"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                />

            <EditText
                android:id="@+id/edtext_retry_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/edtext_firstname"
                android:background="@drawable/rounded_edittext"
                android:hint=" اعادة كلمة المرور"
                android:inputType="textWebPassword"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                />

            <Button
                android:id="@+id/btn_reg_now"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="تسجيل دخول" />

            <TextView
                android:id="@+id/txt_haveaccount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="لدى حساب بالفعل,تسجيل دخول "
                android:textColor="@color/black"
                android:textSize="15dp" />
</LinearLayout>
    </ScrollView>
</LinearLayout>







