<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/actionbar">
        <TextView
            android:id="@+id/txt_bond_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="سندات قبض نقدى"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="27dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/arrow" />
        <ImageView
            android:id="@+id/image_add_bond_cash"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="40dp"
            app:srcCompat="@mipmap/add" />
    </RelativeLayout>


    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical"-->
        <!--android:gravity="center_horizontal">-->


        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_gravity="center_horizontal"
            android:thumb="@drawable/track_selector"
            app:track="@drawable/thum_selector"
            android:layout_marginTop="20dp"
          />
        <TextView
            android:id="@+id/text_send_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="-17dp"
            android:text="المرسل"
            android:textColor="@color/black"
           />

        <TextView
            android:id="@+id/text_recieve_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المستلمة"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-20dp"
            android:textColor="@color/black"
          />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/greyshade"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="سند قبض من احمد"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_notif"
                android:layout_marginTop="-20dp"
                android:text="01115698745"
                android:layout_marginLeft="150dp"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_notif"
                android:layout_marginLeft="296dp"
                android:layout_marginTop="5dp"
                android:text="14/4/2019"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="كاش"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/green"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/greyshade"
        android:layout_marginTop="220dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_notif1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="سند قبض من احمد"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_notif1"
                android:layout_marginTop="-20dp"
                android:text="01115698745"
                android:layout_marginLeft="150dp"
                android:textColor="@color/grey"/>


            <TextView
                android:id="@+id/text_date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_notif1"
                android:layout_marginLeft="296dp"
                android:layout_marginTop="5dp"
                android:text="14/4/2019"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/text_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="كاش"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/green"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/greyshade"
        android:layout_marginTop="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_notif2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="سند قبض من احمد"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_notif2"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-20dp"
                android:text="01115698745"
                android:textColor="@color/grey"/>


            <TextView
                android:id="@+id/text_date2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_notif2"
                android:layout_marginLeft="296dp"
                android:layout_marginTop="5dp"
                android:text="14/4/2019"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/text_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اجل"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff0c35"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/floatingActionButton_cash"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="550dp"
        android:layout_gravity="bottom|end"
        android:backgroundTint="@color/fabcolor"
        android:clickable="true"
        android:src="@drawable/circle" />

    <ImageView
        android:id="@+id/image_filter_cash"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-10dp"
        android:src="@drawable/filter"
        android:layout_marginTop="554dp"/>
    </LinearLayout>



<!--</LinearLayout>-->







