<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".products">

    <ImageView
        android:id="@+id/image_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/actionbar" />

    <TextView
        android:id="@+id/txt_bond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="40dp"
        android:text="سند قبض عيني"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/img_arrow_bond"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/arrow" />

    <ImageView
        android:id="@+id/image_add_bond"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/add" />
    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="130dp"
        android:thumb="@drawable/track_selector"
        app:track="@drawable/thum_selector"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/text_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="120dp"
        android:text="المرسل"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/text_recieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="المستلمة"
        android:textColor="@color/black"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="130dp"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="57dp"
        tools:ignore="MissingConstraints" />

</RelativeLayout>